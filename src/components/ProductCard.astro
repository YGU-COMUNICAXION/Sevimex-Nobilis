---
import { Image } from "astro:assets";
const { product } = Astro.props;
---

<article
  data-product={product.id}
  class="product-card bg-[#FAFAFA] rounded-2xl p-6 py-12 text-center
  flex flex-col items-center gap-4 transition-all hover:ring-2 hover:ring-primary-3 cursor-pointer"
>
  <Image
    src={product.image}
    alt={product.name}
    class="w-40 h-auto object-contain"
  />

  <h3 class="text-lg md:text-xl font-semibold text-[#2C1E55]">
    {product.name}
  </h3>

  <p class="text-sm md:text-base text-[#666666] font-light">
    {product.description}
  </p>

  <button
    class="mt-auto bg-primary-3 text-white text-sm font-inter font-medium px-6 py-2 rounded-full hover:bg-[#8c6bc4] transition-colors"
  >
    M√ÅS INFO
  </button>
</article>
