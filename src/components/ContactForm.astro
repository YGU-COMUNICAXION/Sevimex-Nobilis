---
const { variant = "section" } = Astro.props;

const wrapperClass =
  variant === "modal" ? "rounded-lg px-4 py-6 md:px-6 md:py-8" : "bg-white";

const inputClass =
  "w-full border border-primary-1 rounded-md px-4 py-2 text-base focus:outline-none focus:ring-2 focus:ring-primary-1 placeholder:text-neutral-2";
---

<form
  action="https://formspree.io/f/xpzgrnqg"
  method="POST"
  class={`${wrapperClass} space-y-8 text-primary-1 text-sm`}
>
  {
    variant === "modal" && (
      <div class="border-b border-primary-1 pb-4">
        <h3 class="font-bold text-base md:text-lg  border-b border-primary-1 pb-2 mb-6">
          Solicite su presupuesto
        </h3>
        <label
          for="message"
          class="text-primary-1 font-medium mb-2 inline-block"
        >
          Compártenos tus dudas
        </label>
        <textarea
          name="message"
          id="message"
          rows="3"
          class={`${inputClass} resize-none`}
          placeholder="Me interesa recibir una cotización para el modelo. Quedo atento(a) a su respuesta. Saludos cordiales"
        />
      </div>
    )
  }

  <div class="space-y-6">
    <h3 class="font-bold text-base md:text-lg lg:text-xl">
      {
        variant === "modal"
          ? "Detalles de contacto"
          : "¡Escríbenos! Estamos listos para ayudarte"
      }
      <span class="text-neutral-2 text-xs font-normal"> *Obligatorio.</span>
    </h3>

    <div class="grid gap-6">
      <input
        type="text"
        name="name"
        id="name"
        placeholder="Nombre*"
        class={inputClass}
        required
      />
      <div class="grid md:grid-cols-2 gap-4">
        <input
          type="text"
          name="company"
          id="company"
          placeholder="Empresa"
          class={inputClass}
        />
        <input
          type="tel"
          name="phone"
          id="phone"
          placeholder="+52 00 000 0000*"
          class={inputClass}
          required
        />
      </div>
      <div class="grid md:grid-cols-2 gap-4">
        <input
          type="text"
          name="state"
          id="state"
          placeholder="Estado"
          class={inputClass}
        />
        <input
          type="email"
          name="email"
          id="email"
          placeholder="Correo electrónico*"
          class={inputClass}
          required
        />
      </div>
      {
        variant === "section" && (
          <div>
            <h3 class="font-medium text-base md:text-lg mb-2">
              Compártenos tus dudas
            </h3>
            <textarea
              name="message"
              id="message"
              rows="3"
              placeholder="Me interesa recibir una cotización para el modelo C310S/C510S. Quedo atento(a) a su respuesta. Saludos cordiales."
              class={`${inputClass} resize-none`}
            />
          </div>
        )
      }
    </div>
  </div>

  <div class="flex justify-end gap-4 pt-2">
    {
      variant === "modal" && (
        <button
          type="button"
          class="text-primary-1 font-normal border border-primary-1 px-4 py-2 rounded-full hover:cursor-pointer hover:bg-primary-3"
          onclick="this.closest('form').reset()"
        >
          CANCELAR
        </button>
      )
    }

    <button
      type="submit"
      class="bg-primary-1 text-white px-6 py-2 rounded-full font-normal hover:cursor-pointer hover:bg-primary-2"
    >
      ENVIAR
    </button>
  </div>
</form>
